<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/1a9f376056.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button"></button>
          <div class="collapse navbar-collapse">
            <ul class="navbar-nav ml-auto">
              
              <% if user_signed_in? %>
                
                <li class="nav-item">
                  <%= link_to user_path(current_user.id), class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                
                <li class="nav-item">
                  <%= link_to users_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-users"></i> Users
                  <% end %>
                </li>
                
                <li class="nav-item">
                  <%= link_to books_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-book-open"></i> Books
                  <% end %>
                </li>
                
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-right-from-bracket"></i></i> Log out
                  <% end %>
                </li>
                
              <% else %>
              
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-house"></i> Home
                  <% end %>
                </li>
                
                <li class="nav-item">
                  <%= link_to home_about_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-link"></i> About
                  <% end %>
                </li>
                
   
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-user-plus"></i> Sign up
                  <% end %>
                </li>
                
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "nav-link text-light" do %>
                    <i class="fa-solid fa-right-to-bracket"></i> Log in
                  <% end %>
                </li>
                
              <% end %>
              
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <main><p><%= notice %></p></main>
    <%= yield %>
    
    <footer>
      <div class="container">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>  
    </footer>
  </body>
</html>
