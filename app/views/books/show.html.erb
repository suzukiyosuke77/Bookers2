<div class="container">
  <div class="row">
    
  <div class="col-md-3">
    <%= render "users/userinfo", user: @user %>
    <%= render "books/newbook", book: @book %>
  </div>

  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-invers">
      <thead>
        <tr>
          <td>
            <%= link_to user_path(current_user) do %>
              <%= image_tag current_user.profile_image, size: "100x100" %><br>
              <%= current_user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id)  %></td>
          <td><%= @book.body %></td>
          <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
          <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-danger" %></td>
        </tr>
      </thead>
    </table>
  </div>


