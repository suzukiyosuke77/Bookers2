<div class="container">
  <div class="row">
    
  <div class="col-md-3">
    <%= render "users/userinfo", user: @user %>
    <%= render "books/newbook", book: @book %>
  </div>
    
  <div class="col-md-8 offset-md-1">
    <h2>Books</h2>
    <table class="table table-hover table-invers">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= link_to user_path(current_user.id) do %>
            <%= image_tag current_user.profile_image, size: "80x80" %>
          <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  </div>
</div>
