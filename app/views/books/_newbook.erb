<h2>New book</h2>

<!-- form_with部分 -->
<%= form_with model: Book.new do |f| %>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :Opinion %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>